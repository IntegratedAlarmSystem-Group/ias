pipeline {
    agent any

    environment {
        // Define your environment variables here
        JAVA_HOME="/usr/lib/jvm/java-21-openjdk-amd64"
        KAFKA_HOME="/opt/kafka"
        IAS_ROOT = "${env.WORKSPACE}/IasRoot"
        PATH = "${env.PATH}:${env.IAS_ROOT}/bin:${env.JAVA_HOME}/bin:${KAFKA_HOME}/bin:/var/lib/jenkins/.local/bin"
    }

    stages {
        stage('Clean Workspace') {
            steps {
                cleanWs()
            }
        }
        stage('Retrieve Artifact') {
            steps {
                copyArtifacts(
                    projectName: 'IAS develop pipeline',
                    filter: 'IasRoot.tgz',
                    selector: lastSuccessful()
                )
            }
        }
        stage('Extract Artifact') {
            steps {
                sh '''
                    echo "IAS_ROOT is set to: $IAS_ROOT"
                    mkdir -p $IAS_ROOT
                    rm -rf $IAS_ROOT/*
                    ls
                    tar -xzf IasRoot.tgz -C $IAS_ROOT
                    pwd
                    ls $IAS_ROOT
                '''
            }
        }
        stage('Checkout') {
            steps {
                dir('ias') {
                    git url: 'https://github.com/IntegratedAlarmSystem-Group/ias.git', branch: 'develop'
                    sh 'ls -la'
                }
            }
        }
        stage('Build') {
            steps {
                dir('ias') {
                    sh '''
                        ./gradlew build
                    '''
                }
            }
        }
        stage('Run Unit Tests') {
            steps {
                dir('ias') {
                    sh '''
                        #!/bin/bash
                        source Tools/config/ias-bash-profile.sh
                        ./gradlew iasUnitTest
                    '''
                }
            }
        }
    }
    
    post {
        success {
            echo 'Unit tests completed successfully!'
        }
        failure {
            echo 'Unit tests failed!'
        }
    }
}
